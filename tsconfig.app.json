{
  "extends": "./tsconfig.json", // Reference to the base tsconfig.json file
  "compilerOptions": {
    "outDir": "./dist/out-tsc/app", // Or other app-specific output directory
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] // Add the alias here as well
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
